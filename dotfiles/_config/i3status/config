# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
  output_format = "i3bar"
  colors = true
  color_good = "#50FA7B"
  color_degraded = "#F1FA8C"
  color_bad = "#FF5555"
  interval = 5
}

# order += "ipv6"
# order += "wireless _first_"
order += "ethernet _first_"
# order += "battery all"
order += "disk /"
order += "load"
order += "cpu_usage"
# order += "cpu_temperature 0"
order += "memory"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "Wireless: (%quality at %essid) %ip"
        format_down = "Wireless: Down"
}

ethernet _first_ {
        format_up = "Ethernet: %ip (%speed)"
        format_down = "Ethernet: Down"
}

battery all {
        format = "%status %percentage %remaining"
}

disk "/" {
        format = "Free space: %avail"
}

load {
        format = "Load: %1min"
}

cpu_usage {
  format = "Processor: %usage"
}

cpu_temperature 0 {
        format = "Temperature: %degrees °C"
        path = "/sys/devices/pci0000:00/0000:00:18.3/hwmon/hwmon2/temp1_input"
}

memory {
        format = "Memory: %used | %available"
        threshold_degraded = "1G"
        format_degraded = "Memory < %available"
}

volume master {
        format = "Volume: %volume"
        format_muted = "Muted: %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

tztime local {
        format = "%Y-%m-%d (%a) %H:%M:%S"
}
